# Supabase (required)
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Auth / security
ADMIN_EMAIL=your-email@example.com
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CSRF_SECRET=change-me-in-local-dev

# Optional: Supabase service role (server-side admin operations)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Optional: Redis / KV cache for stats (choose one)
# UPSTASH_REDIS_REST_URL=your-redis-url
# UPSTASH_REDIS_REST_TOKEN=your-redis-token
# KV_REST_API_URL=your-kv-url
# KV_REST_API_TOKEN=your-kv-token
# STORAGE_TOKEN=your-storage-token

# Optional: Site config
# NEXT_PUBLIC_SITE_URL=http://localhost:3000
# NEXT_PUBLIC_BLOG_TITLE=My Blog
# NEXT_PUBLIC_BLOG_DESCRIPTION=A blog powered by Next.js

# Optional: Giscus comments
# NEXT_PUBLIC_GISCUS_REPO=username/repo
# NEXT_PUBLIC_GISCUS_REPO_ID=repo-id
# NEXT_PUBLIC_GISCUS_CATEGORY=General
# NEXT_PUBLIC_GISCUS_CATEGORY_ID=category-id

# Optional: Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
